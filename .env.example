# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/ttd_registration
# For MongoDB Atlas use:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ttd_registration

# Encryption Keys (CHANGE THESE IN PRODUCTION!)
ENCRYPTION_KEY=your-32-character-encryption-key-here-change-this
ENCRYPTION_IV=your-16-char-iv

# JWT Secret
JWT_SECRET=your-jwt-secret-key-change-in-production

# File Upload Configuration
UPLOAD_TYPE=s3
# Options: 'local' or 's3' (use 's3' for production on Render)

# AWS S3 Configuration (if using S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=ttd-registration-uploads

# Aadhaar Verification Provider (Optional - for production)
AADHAAR_PROVIDER=mock
# Options: 'mock', 'karza', 'signzy'
AADHAAR_API_KEY=your-api-key
AADHAAR_API_URL=https://api.provider.com/verify

# CORS Configuration
CORS_ORIGIN=*
# For production with specific domain: https://yourdomain.com
# For Render deployment, you can set this to your Render app URL

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100